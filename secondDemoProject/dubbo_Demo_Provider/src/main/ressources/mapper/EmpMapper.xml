<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cb.dubbo.demo.provider.mapper.EmpMapper" > 
  <resultMap id="BaseResultMap" type="com.cb.dubbo.demo.api.dao.Emp" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="gender" property="gender" jdbcType="INTEGER" />
    <result column="deptid" property="deptId" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, gender, deptid
  </sql>
  <!-- 根据id拿emp对象 -->
  <select id="findEmp" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from emp
    where id = #{id}
  </select>
  <!-- 全查 -->
  <select id="findEmps" resultMap="BaseResultMap">
  	select * from emp 
  </select>
 <!-- 根据id 删除emp对象 -->
 <delete id="delEmp" parameterType="java.lang.Integer">
 delete from emp where id= #{id}
 </delete>
 <!-- 根据id修改emp对象的值 -->
 <update id="modEmp" parameterType="com.cb.dubbo.demo.api.dao.Emp">
 update emp set name=#{name},gender =#{gender},deptid=#{deptId} where id=#{id}
 </update>
 <!-- 添加emp对象 -->
 <insert id="addEmp" parameterType="com.cb.dubbo.demo.api.dao.Emp">
 insert into emp(name,gender,deptId) values(#{name},#{gender},#{deptId})
 </insert>
</mapper>